{
  "name": "Brightcove Video Id Finder",
  "version": "1.1",
  "author": "Alessandro Garzaro <garzaro.alessandro@gmail.com",
  "description": "Expose the id of the brightcove videos present in the page",
  "manifest_version": 2,
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "permissions": ["activeTab"],
  "browser_action": {
    "default_icon": {
      "16": "images/logo_16.png",
      "32": "images/logo_32.png",
      "48": "images/logo_48.png",
      "128": "images/logo_128.png"
    },
    "default_title": "Brightcove Video Id Finder\r\nClick to show/hide ids"
  },
  "icons": {
    "16": "images/logo_16.png",
    "32": "images/logo_32.png",
    "48": "images/logo_48.png",
    "128": "images/logo_128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": ["icons/external-link.svg"]
}
